.data
enterNum1: .asciiz "Digite o primeiro numero: "
enterNum2: .asciiz "Digite o segundo numero: "
divideByZero: .asciiz "Erro: divisao por zero!\n"
result: .asciiz "Resultado: "

.text
.globl main

main:
    # Pede ao usuário para digitar o primeiro número
    la $a0, enterNum1
    li $v0, 4
    syscall

    # Lê o primeiro número
    li $v0, 5
    syscall
    move $t0, $v0

    # Pede ao usuário para digitar o segundo número
    la $a0, enterNum2
    li $v0, 4
    syscall

    # Lê o segundo número
    li $v0, 5
    syscall
    move $t1, $v0

    # Verifica se o divisor é igual a zero
    beqz $t1, divideByZero

    # Realiza a divisão
    div $t0, $t1

    # Exibe o resultado
    move $a0, $t0
    li $v0, 1
    syscall

    j exit

divideByZero:
    # Exibe a mensagem de divisão por zero
    la $a0, divideByZero
    li $v0, 4
    syscall

    # Pula de volta para a solicitação dos números
    j main

exit:
    # Encerra o programa
    li $v0, 10
    syscall
